#!/usr/bin/env bash
# This script installs nginx on a server that listens on port 80
# returns a page with the string Hello world

sudo apt-get -y update
sudo apt-get -y install nginx
echo "Hello World!" | sudo tee /var/www/html/index.html
sudo sed -i '/server_name _;/a location /redirect_me {\nreturn 301 https://www.youtube.com/;\n}' /etc/nginx/sites-available/default
sudo nginx -s reload
